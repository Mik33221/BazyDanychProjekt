@page
@model Sklep3.Pages.Pracownik.Zamowienia.EditModel
@{
}

<br />
<h2>Edytuj stan zamówienia</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
	</div>
}

<form method="POST">
	<select name="stan" id="stan" class="form-select form-select-sm" size="6">
		@{
			var opcje = new List<string> { "Złożone", "Zapłacone", "W realizacji", "Spakowane", "Wysłane", "Dostarczone" };
			foreach (var opcja in opcje)
			{
				if (opcja == Model.zamowienieInfo.stan)
				{
					@:<option value="@opcja" selected>@opcja</option>
				}
				else
				{
					@:<option value="@opcja">@opcja</option>
				}
			}
		}
	</select>

	@if (Model.successMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>@Model.successMessage</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn-primary">Zatwierdź</button>
		</div>

		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/Pracownik/Zamowienia" role="button">Anuluj</a>
		</div>
	</div>
</form>

